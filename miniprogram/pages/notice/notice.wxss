page {
    background-color: #74EBD5;
    background-image: linear-gradient(351deg, #74EBD5 0%, #9FACE6 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
.user-head {
    align-self: stretch;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    position: relative;
    overflow: hidden;
    height: 400rpx;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  }
.user-head .avatar{
    overflow:hidden;
    display: block;
    width: 140rpx;
    height: 140rpx;
    border: 2px solid #fff;  
    border-radius: 50%;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}
.action-menu-wrapper{
    width: 100%;
    margin-bottom: -100rpx;
}
.action-menu-item{
    align-items: center
}
.scroll-view{
    overflow: hidden;
    height:835rpx;
    align-self:stretch;
    box-sizing:border-box;
}
.title{
    min-height: 30rpx;
}
.cu-card>.cu-item{
    margin-top: 15rpx;
    margin-bottom: 15rpx;
    position: relative;
}
.c-read-icon{
    position:absolute;
    top:0;
    right:0rpx;
    font-size:57rpx;
}