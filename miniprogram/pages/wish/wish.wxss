page {
    background-color: #FAACA8; 
    background-image: linear-gradient(19deg, #FAACA8 0%, #DDD6F3 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
.user-head {
    align-self: stretch;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    position: relative;
    overflow: hidden;
    height: 400rpx;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  }
.user-head .avatar{
    overflow:hidden;
    display: block;
    width: 140rpx;
    height: 140rpx;
    border: 2px solid #fff;  
    border-radius: 50%;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}
.action-menu-wrapper{
    width: 100%;
    margin-bottom: -50rpx;
}
.action-menu-item{
    align-items: center
}
